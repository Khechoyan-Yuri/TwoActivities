<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yuri_khechoyan.hw3_twoactivities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- FIRST NAME TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_FirstName"
                android:text="First Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>

            <!-- FIRST NAME EditText: User Input -->
			<EditText
                android:id="@+id/et_FirstName"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:hint="John"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <!-- LAST NAME TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            
			<TextView
                android:id="@+id/tv_LastName"
                android:text="Last Name:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- LAST NAME EditText: User Input -->
			<EditText
                android:id="@+id/et_LastName"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:hint="Smith"
                android:textAlignment="center"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <!-- PHONE NUMBER TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            
			<TextView
                android:id="@+id/tv_PhoneNumber"
                android:text="Phone Number:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- PHONE NUMBER EditText: User Input -->
			<EditText
                android:id="@+id/et_PhoneNumber"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:hint="(123) 456-7890"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <!-- EMAIL ADDRESS TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            
			<TextView
                android:id="@+id/tv_EnterEmail"
                android:text="Email Address:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- EMAIL EditText: User Input -->
			<EditText
                android:id="@+id/et_EnterEmail"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:hint="JohnSmith@email"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <!-- RE-ENTER EMAIL ADDRESS TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            
			<TextView
                android:id="@+id/tv_ReEnterEmail"
                android:text="Re-enter Email:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- ReEnterEmail EditText: User Input -->
			<EditText
                android:id="@+id/et_ReEnterEmail"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:hint="JohnSmith@email"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <!-- USERNAME TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            
			<TextView
                android:id="@+id/tv_UserName"
                android:text="User Name:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

            <!-- USERNAME EditText: User Input -->
			<EditText
                android:id="@+id/et_UserName"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:hint="John Smith"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <!-- PASSWORD TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            
			<TextView
                android:id="@+id/tv_PassWord"
                android:text="Password:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- PASSWORD EditText: User Input -->
			<EditText
                android:id="@+id/et_PassWord"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:password="true"
                android:inputType="textPassword"
                android:hint="Password"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <!-- RE-ENTER PASSWORD TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            
			<TextView
                android:id="@+id/tv_ReEnterPassWord"
                android:text="Re-enter Pass:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- RE-PASSWORD EditText: User Input -->
			<EditText
                android:id="@+id/et_ReEnterPassWord"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:password="true"
                android:hint="Confirm Password"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- GENDER RADIO BUTTONS TextView & Buttons-->
            <RadioGroup
                android:id="@+id/RadioGroup"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Gender"
                    android:text="Gender:"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                    <RadioButton android:id="@+id/radio_Male"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Male"
                android:layout_toRightOf="@id/tv_Gender"
                android:layout_below="@id/tv_ReEnterPassWord"
                android:layout_alignBottom="@id/tv_Gender"
                android:layout_marginTop="10dp"/>
                   
                <RadioButton android:id="@+id/radio_Female"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Female"
                    android:layout_toRightOf="@id/radio_Male"
                    android:layout_alignBottom="@id/radio_Male"
                    android:layout_marginTop="10dp"/>

            </RadioGroup>
        </LinearLayout>

        <!-- Country spinner Text-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_Country"
                android:text="Country:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Country Spinner -->
        <Spinner
            android:id="@+id/country_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/country_array" />

        <!-- CLEAR & SUBMIT BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:onClick="ClearFields"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-48dp"
            android:text="Submit"
            android:onClick="Submit"/>

        <!-- BUTTON FOR SWITCHING LAYOUTS -->
        <Button
            android:id="@+id/btn_Relative_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-48dp"
            android:text="Relative"
            android:onClick="Relative_Layout"/>

    </LinearLayout>
</ScrollView>