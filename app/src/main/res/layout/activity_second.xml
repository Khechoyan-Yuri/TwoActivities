<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yuri_khechoyan.hw3_twoactivities.SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- FIRST NAME TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_FirstName"
                android:text="First Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>

            <!-- FIRST NAME TextView: User Input -->
			<TextView
                android:id="@+id/et_FirstName"
                android:text= "user_FirstName"
                android:textSize="20dp"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

        <!-- LAST NAME TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_LastName"
                android:text="Last Name:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

           <!-- LAST NAME TextView: User Input -->
		   <TextView
                android:id="@+id/et_LastName"
                android:text="user_LastName"
                android:textSize="20dp"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <!-- PHONE NUMBER TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_PhoneNumber"
                android:text="Phone Number:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- PHONE NUMBER TextView: User Input -->
			<TextView
                android:id="@+id/et_PhoneNumber"
                android:text="user_PhNumber"
                android:textSize="20dp"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <!-- EMAIL ADDRESS TextView & EditText -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_EnterEmail"
                android:text="Email Address:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- EMAIL ADDRESS TextView: User Input -->
			<TextView
                android:id="@+id/et_EnterEmail"
                android:text="user_Email"
                android:textSize="20dp"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <!-- USERNAME TextView & EditText -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_UserName"
                android:text="User Name:"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

            <!-- USERNAME TextView: User Input -->
			<TextView
                android:id="@+id/et_UserName"
                android:text="user_UserName"
                android:textSize="20dp"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
